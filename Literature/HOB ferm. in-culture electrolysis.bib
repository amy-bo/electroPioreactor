@article{torellaEfficientSolartofuelsProduction2015,
  title = {Efficient Solar-to-Fuels Production from a Hybrid Microbial--Water-Splitting Catalyst System},
  author = {Torella, Joseph P. and Gagliardi, Christopher J. and Chen, Janice S. and Bediako, D. Kwabena and Col{\'o}n, Brendan and Way, Jeffery C. and Silver, Pamela A. and Nocera, Daniel G.},
