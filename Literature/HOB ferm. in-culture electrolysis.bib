  author = {Li, Shuwei and Kim, Minsoo and Kong, Da Seul and Min, Kyoungseon and Wu, Guangxi and Cui, Meiying and Kim, Changman and Oh, You-Kwan and Kim, Soek and Lee, Soo Youn and Kang, Sung Gyun and Nyg{\aa}rd, Yvonne and Kim, Jung Rae},
  year = 2023,
